{
  "hosting": {
    "public": "public",
    "ignore": ["**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/copilot/ingest",
        "function": "copilotIngest"
      },
      {
        "source": "/vault/save",
        "function": "vaultSave"
      }
    ]
  },
  "functions": {
    "codebase": "default",
    "runtime": "nodejs22"
  }
}